        android:supportsRtl="true"
        android:theme="@style/Theme.BitrateLab">

        <!-- +++ App ID de AdMob (usa el de prueba mientras tanto) -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3125779407094460~3458007315" />
        <!-- Cambia por tu App ID real cuando lo tengas -->

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.BitrateLab">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
